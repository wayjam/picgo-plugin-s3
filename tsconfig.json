{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "target": "es2017",
    "declaration": true,
    "outDir": "dist",
    // "strictNullChecks": true,
    "strictFunctionTypes": true,
