    // It's shit.
    // "baseUrl": "src",
    // "paths": {
    //   "@core/*": ["core/*"],
    //   "@lib/*": ["lib/*"],
    //   "@plugins/*": ["plugins/*"],
    //   "@utils/*": ["utils/*"]
    // },
    "lib": [
      "es2017",
      "es2015",
      "es6"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [ "node_modules", "dist", "**/*.spec.ts", "**/__tests__"]
}
